<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingStart="15dp"
    android:paddingEnd="60dp"
    android:clipToPadding="false">

    <View
        android:id="@+id/message_avatar"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        android:background="@drawable/circle"
        android:layout_width="34dp"
        android:layout_height="34dp" />


    <TextView
        android:id="@+id/message_name"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/message_avatar"
        android:layout_alignTop="@+id/message_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Rose"/>

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/message_avatar"
        android:layout_marginEnd="0dp"
        android:gravity="end"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_body"
        android:layout_below="@+id/message_name"
        android:layout_alignStart="@+id/message_name"
        android:background="@drawable/their_message"
        android:padding="10dp"
        android:elevation="2dp"
        android:textSize="14sp"
        android:text="How are you doing? This is a long message that should probably wrap."
        />
</RelativeLayout>