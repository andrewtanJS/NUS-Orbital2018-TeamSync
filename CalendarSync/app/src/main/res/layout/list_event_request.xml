<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/event_req_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"
            android:text="Event Name"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/event_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/event_req_name"
            android:layout_marginEnd="21dp"
            android:text=""
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@+id/event_req_name"
            android:background="@color/colorLightGrey" />

        <TextView
            android:id="@+id/event_req_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="51dp"
            android:text="From" />

        <TextView
            android:id="@+id/event_req_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/event_req_from"
            android:layout_marginStart="67dp"
            android:text="00:00"
            android:textSize="24dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/event_req_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/event_req_start_time"
            android:layout_marginTop="85dp"
            android:text="28/08/2018"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/event_req_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/event_req_from"
            android:layout_marginEnd="144dp"
            android:text="To" />

        <TextView
            android:id="@+id/event_req_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/event_req_from"
            android:layout_marginEnd="70dp"
            android:text="00:00"
            android:textSize="24dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/event_req_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/event_req_end_time"
            android:layout_below="@+id/event_req_start_time"
            android:text="28/08/2018"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_req_start_date"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/event_req_accept"
                android:layout_width="146dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:text="ACCEPT"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/event_req_decline"
                android:layout_width="146dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorAccent"
                android:text="decline" />

        </LinearLayout>


    </RelativeLayout>





</android.support.v7.widget.CardView>

